{
    "manifest_version": 3,
    "name": "DeepDive Search Extension",
    "version": "1.0.5",
    "description": "Automatically launch DeepDives from compatible web pages",
    "permissions": [
        "activeTab"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://www.google.com/search*",
                "*://google.com/search*",
                "*://arxiv.org/abs/*",
                "*://dx.doi.org/*",
                "*://doi.org/*",
                "*://www.semanticscholar.org/paper/*",
                "*://semanticscholar.org/paper/*",
                "*://pubmed.ncbi.nlm.nih.gov/*",
                "*://www.ncbi.nlm.nih.gov/pubmed/*"
            ],
            "js": ["content.js"],
            "css": ["styles.css"]
        }
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "deepdive@sturdystatistics.com",
            "strict_min_version": "109.0"
        }
    }
}
